<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main$PlaceholderFragment">

    <Button
        android:id="@+id/main_button"

        android:text="@string/main_button"
        android:textColor="@color/teal"
        android:textSize="20dp"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:padding="20dp"
        android:layout_margin="10dp"

        android:background="@drawable/main_button_background"
        />

    <TextView
        android:id="@+id/title_title"

        android:text="The most recent post on Etsy is called: "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"

        android:layout_below="@+id/main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:padding="20dp"
        android:layout_margin="10dp"
        />


    <TextView
        android:id="@+id/text_title"

        android:text=""
        android:gravity="center"

        android:layout_below="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/description_title"

        android:text="A description of the most recent post will appear below:"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"

        android:layout_below="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:padding="20dp"
        android:layout_margin="10dp"
        />


    <TextView
        android:id="@+id/desciption"

        android:text=""
        android:gravity="center"

        android:layout_below="@+id/description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
